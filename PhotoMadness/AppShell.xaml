<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PhotoMadness.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PhotoMadness"
    Shell.FlyoutBehavior="Flyout"
    Title="PhotoMadness">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <FlyoutItem
        Title="Feed">
        <ShellContent 
            ContentTemplate="{DataTemplate local:HomePage}"/>            
    </FlyoutItem>
    
    <FlyoutItem
        Title="Shop">
        <ShellContent 
            ContentTemplate="{DataTemplate local:ShopPage}"/>
    </FlyoutItem>

    <Shell.FlyoutHeader>
        <Grid 
            BackgroundColor="#F0A64D" 
            Padding="10">
            <Label
                Text="PhotoMadness"
                FontSize="24"
                TextColor="Black"/>
        </Grid>
    </Shell.FlyoutHeader>

</Shell>
